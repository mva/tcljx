;;; This requires a properly informed ClassHierarchyResolver, or an
;;; invalid stack map is generated for "fn~1".
(deftest join-two-interface-functions
  (is (= '[[(CLASS Vx [PUBLIC INTERFACE ABSTRACT] "pkg/ns0/FnMyFn")
            [(METHOD [PUBLIC ABSTRACT] "fn0" "()I")]]
           
           [(CLASS Vx [PUBLIC ABSTRACT] "pkg/ns0/_10")
            [(FIELD [PUBLIC STATIC FINAL] "fn-1" "Lpkg/ns0/FnMyFn;")]
            [(FIELD [PUBLIC STATIC FINAL] "fn-2" "Lpkg/ns0/FnMyFn;")]
            
            [(METHOD [STATIC FINAL] "FnMyFn~0" "()I")
             (ICONST_1)
             (IRETURN)]
            [(METHOD [STATIC FINAL] "FnMyFn^1~0" "()I")
             (ICONST_2)
             (IRETURN)]
            
            [(METHOD [PUBLIC STATIC FINAL] "f~1" "(Ljava/lang/Object;)V")
             ["LOCAL 0: Object x"]
             (ALOAD_0)
             (IFNONNULL L:0)
             (GETSTATIC . "fn-2" "Lpkg/ns0/FnMyFn;")
             (GOTO L:1)
             [L:0]
             (GETSTATIC . "fn-1" "Lpkg/ns0/FnMyFn;")
             [L:1]
             (ASTORE_1)
             ["LOCAL 1: FnMyFn g*"]
             (RETURN)]
            [(METHOD [PUBLIC STATIC FINAL] "f" "()Ltinyclj/lang/StaticFn;")
             (LDC [:bsm-static-fn "_" "Ltinyclj/lang/StaticFn;"
                   [[STATIC . "f~1" "(Ljava/lang/Object;)V"]]])
             (ARETURN)]

            [(METHOD [PUBLIC STATIC] "<clinit>" "()V")
             (LDC "pkg.ns0")
             (INVOKESTATIC RT "createNamespace" "(Ljava/lang/String;)V")
             
             (INVOKEDYNAMIC "fn0" "()Lpkg/ns0/FnMyFn;" :bsm-metafactory
                            ["MethodTypeDesc[()int]"
                             [STATIC . "FnMyFn~0" "()I"]
                             "MethodTypeDesc[()int]"])
             (PUTSTATIC . "fn-1" "Lpkg/ns0/FnMyFn;")
             (INVOKEDYNAMIC "fn0" "()Lpkg/ns0/FnMyFn;" :bsm-metafactory
                            ["MethodTypeDesc[()int]"
                             [STATIC . "FnMyFn^1~0" "()I"]
                             "MethodTypeDesc[()int]"])
             (PUTSTATIC . "fn-2" "Lpkg/ns0/FnMyFn;")
             (RETURN)]]
           [(CLASS Vx [PUBLIC ABSTRACT] "pkg/ns0/___" nil "pkg/ns0/_10")
            [(METHOD [PUBLIC STATIC FINAL SYNTHETIC] "requires~1" "()Ljava/lang/String;")
             (LDC "tinyclj.core")
             (ARETURN)]]]
         (nmsp '[(ns pkg.ns0)
                 (definterface* FnMyFn
                   (fn0 ^int []))
                 (import* pkg.ns0.FnMyFn)
                 (def fn-1 (^FnMyFn fn* [] 1))
                 (def fn-2 (^FnMyFn fn* [] 2))
                 (def f (fn* f ^void [x]
                             (let* [g* (if (identical? nil x) fn-2 fn-1)]
                               nil)))]))))

(deftest default-vs-provided-sig
  (is (= '[[(CLASS Vx [PUBLIC ABSTRACT] "pkg/ns0/_10")
            [(METHOD [STATIC FINAL] "Consumer~1" "(Ljava/lang/Object;)V")
             ["LOCAL 0: Object x"]
             (RETURN)]
            [(METHOD [STATIC FINAL] "Consumer^1~1" "(Ljava/lang/String;)V")
             ["LOCAL 0: String s"]
             (RETURN)]
            
            [(METHOD [PUBLIC STATIC] "<clinit>" "()V")
             (LDC "pkg.ns0")
             (INVOKESTATIC RT "createNamespace" "(Ljava/lang/String;)V")
             
             (INVOKEDYNAMIC "accept"
                            "()Ljava/util/function/Consumer;"
                            :bsm-metafactory
                            ["MethodTypeDesc[(Object)void]"
                             [STATIC . "Consumer~1" "(Ljava/lang/Object;)V"]
                             "MethodTypeDesc[(Object)void]"])
             (LDC "foo")
             (INVOKEINTERFACE Consumer "accept" "(Ljava/lang/Object;)V" :itf)
             
             (INVOKEDYNAMIC "accept"
                            "()Ljava/util/function/Consumer;"
                            :bsm-metafactory
                            ["MethodTypeDesc[(Object)void]"
                             [STATIC . "Consumer^1~1" "(Ljava/lang/String;)V"]
                             "MethodTypeDesc[(String)void]"])
             (LDC "foo")
             (INVOKEINTERFACE Consumer "accept" "(Ljava/lang/Object;)V" :itf)
             (RETURN)]]
           [(CLASS Vx [PUBLIC ABSTRACT] "pkg/ns0/___" nil "pkg/ns0/_10")
            [(METHOD [PUBLIC STATIC FINAL SYNTHETIC] "requires~1" "()Ljava/lang/String;")
             (LDC "tinyclj.core")
             (ARETURN)]]]
         (nmsp '[(ns pkg.ns0)
                 (.accept (^java.util.function.Consumer fn* [x])
                          "foo")
                 (.accept (^java.util.function.Consumer fn* ^void [^String s])
                          "foo")]))))

(deftest sig-mismatch
  (is (thrown-with-msg?
       tcljx.data.wrong.WrongInfo
       #"function result .*java.lang.Object.* not assignment compatible to method's .*void.*"
       (nmsp '[(ns pkg.ns0)
               (.accept (^java.util.function.Consumer fn* [^String s]
                         nil)
                        "foo")])))
  
  (is (thrown-with-msg?
       tcljx.data.wrong.WrongInfo
       #"function parameter .*int.* not assignment compatible to method's .*java.lang.Object.*"
       (nmsp '[(ns pkg.ns0)
               (.accept (^java.util.function.Consumer fn* ^void [^int s]
                         nil)
                        "foo")]))))

