             (ARETURN)]
            
            [(METHOD [PUBLIC STATIC FINAL] "fn~1"
                     "(I)Ljava/util/function/Function;")
             ["LOCAL 0: int n"]
             (ILOAD_0)
             (INVOKEDYNAMIC "apply" "(I)Ljava/util/function/Function;"
                            :bsm-metafactory
                            ["MethodTypeDesc[(Object)Object]"
                             [STATIC . "fn$Function~1"
                              "(ILjava/lang/String;)Ljava/lang/Object;"]
                             "MethodTypeDesc[(String)Object]"])
             (ARETURN)]
            
            [(METHOD [PUBLIC STATIC] "<clinit>" "()V")
             (LDC "pkg.ns0")
             (INVOKESTATIC RT "createNamespace" "(Ljava/lang/String;)V")
             (RETURN)]]
           
           [(CLASS Vx [PUBLIC ABSTRACT] "pkg/ns0/___" nil "pkg/ns0/_10")
            [(METHOD [PUBLIC STATIC FINAL SYNTHETIC] "requires~1"
