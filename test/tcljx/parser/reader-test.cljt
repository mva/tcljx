(deftest unreadable-test
  (is (thrown-with-msg? WrongInfo #"unreadable form"
                        (read1 "#<"))))

(deftest discard-test
  (is (= nil (read-all "#_a")))
  
  ;; discards stack
  (is (= 'b (read1 "#_a b")))
  (is (= 'c (read1 "#_a #_b c")))
  (is (= 'c (read1 "#_#_a b c")))

  ;; discard at end of collection is ok
  (is (= '() (read1 "(#_{})")))
  (is (= '() (read1 "(#_#_{}{})")))

  ;; errors in discarded forms are ignored by the reader
  (is (= 'b (read1 "#_#< b"))))

