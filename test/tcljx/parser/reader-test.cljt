(defn sqs-resolver ^Resolver [^symbol this-namespace]
  (let [ns-alias-map {"my.name.space" "my.name.space" ;required namespace
                      "space" "my.name.space"}        ;namespace alias
        ns-str (name this-namespace)
        import-map {"Object" Object}
        global-qname-map {"imported-var"
                          'my.name.space/remote-var}]
    (stub-resolver ns-str ns-alias-map import-map global-qname-map)))

(defn rdr                            ;pre: `cs` is a syntax-quote form
  ([^String cs]
   (rdr cs 'name.space))
  ([^String cs ^symbol this-namespace]
   (read1 cs (sqs-resolver this-namespace))))
(defn rdr-det [^String cs]
  (-> (rdr cs 'name.space) (deterministic-gensyms)))

(deftest reader-autoquote-test
  (is (= nil (rdr "`nil")))
  (is (= :foo (rdr "`:foo")))
  (is (= "foo" (rdr "`\"foo\"")))
  (is (= (object true) (rdr "`true")))
  (is (= (object 123) (rdr "`123"))))

(deftest autoquote-test
  (let [auto? (fn ^boolean [form]
                (identical? form (reader/template form)))]
    (is (auto? nil))
    (is (auto? Boolean/TRUE))           ;aka true
    (is (auto? Boolean/FALSE))          ;aka false
    (is (auto? "foo"))                  ;string
    
    (is (auto? (Integer/valueOf 1)))
    (is (auto? (Long/valueOf 1)))
    (is (auto? (Float/valueOf 1)))
    (is (auto? (Double/valueOf 1)))
    
    (is (auto? (Character/valueOf \a)))
    (is (auto? :foo))                   ;keyword
    (is (auto? #"foo"))                 ;regex
    
    ;; not produced by reader, but listed for completeness:
    (is (auto? Object))                 ;class
    (is (auto? (Byte/valueOf (byte 1))))
    (is (auto? (Short/valueOf (short 1))))))

