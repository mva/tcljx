(deftype ResolverStub [^String ns-str
                       ^map ns-alias-map
                       ^map import-map
                       ^map global-qname-map]
  Resolver
  (ns-str [_]
    ns-str)
  (lookup-namespace [_ alias]
    (.valAt ns-alias-map alias nil))
  (lookup-class [_ sym]
    (.valAt import-map sym nil))
  (lookup-global-qname [_ nm]
    (.valAt global-qname-map nm nil)))

(defn stub-resolver
  (^Resolver []
   (stub-resolver "NO_NS" {}))
  (^Resolver [^String ns-str ^map ns-alias]
   (ResolverStub. ns-str ns-alias {} {}))
  (^Resolver [^String ns-str ^map ns-alias
              ^map import-map ^map global-qname-map]
   (ResolverStub. ns-str ns-alias import-map global-qname-map)))

(defn read-all
  (^seq [^String cs]
   (read-all cs (stub-resolver)))
  (^seq [^String cs ^Resolver resolver]
   (seq (reader/read-all cs resolver))))

(defn read1
  ([^String cs]
   (read1 cs (stub-resolver)))
  ([^String cs ^Resolver resolver] ;one form, no syntax-quote processing
   (let [forms (reader/read-all cs resolver)]
     (case (alength forms)
       0 (throw (IllegalArgumentException. "no data in input"))
       1 (aget forms 0)
       #_else (throw (IllegalArgumentException.
                      "unexpected data after form"))))))

