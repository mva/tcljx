(deftest symbol-value-test
  (is (= (symbol nil "abc") (read1 "abc")))
  (is (= (symbol "abc" "def") (read1 "abc/def")))

  ;; single slash is allowed and mapped to symbol
  (is (= (symbol nil "/") (read1 "/")))

  ;; any other token starting or ending with a slash in an error
  (is (thrown-with-msg? WrongInfo #"invalid token: /a"
                        (read1 "/a")))
  (is (thrown-with-msg? WrongInfo #"invalid token: //"
                        (read1 "//")))
  (is (thrown-with-msg? WrongInfo #"invalid token: a/"
                        (read1 "a/")))
  
  ;; two or more slashes are allowed
  (is (= (symbol "a" "/") (read1 "a//")))
  (is (= (symbol "a" "/b") (read1 "a//b")))
  (is (= (symbol "a" "//b") (read1 "a///b"))))

